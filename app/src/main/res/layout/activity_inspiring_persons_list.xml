<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_inspiring_persons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:padding="6dp"
        app:layout_constraintBottom_toTopOf="@id/btn_new_inspiring_person"
        android:layout_height="0dp"></androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btn_new_inspiring_person"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="@id/rv_inspiring_persons"
        app:layout_constraintBottom_toBottomOf="parent"
        ></Button>
</androidx.constraintlayout.widget.ConstraintLayout>