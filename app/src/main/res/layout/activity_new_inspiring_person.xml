<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_height="match_parent">

    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/et_new_inspiring_person_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="New inspiring person name"
        android:textAlignment="center"/>
    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_new_inspiring_person_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/et_new_inspiring_person_lifetime"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:hint="Lifetime"
        android:textAlignment="center"/>
    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_new_inspiring_person_lifetime"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/et_new_inspiring_person_details"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Details"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_new_inspiring_person_details"
        android:id="@+id/et_new_inspiring_person_picture"
        android:hint="URL for photo of person"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/et_new_inspiring_person_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:id="@+id/et_new_inspiring_person_quote1"
        android:hint="Qoute"
        android:textAlignment="viewStart"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/et_new_inspiring_person_quote1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:id="@+id/et_new_inspiring_person_quote2"
        android:hint="Qoute"
        android:textAlignment="viewStart"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/et_new_inspiring_person_quote2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:id="@+id/et_new_inspiring_person_quote3"
        android:hint="Qoute"
        android:textAlignment="viewStart"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/bt_save_new_inspiring_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>